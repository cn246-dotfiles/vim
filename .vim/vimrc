set viminfo=%,'100,/50,:100,<500,h,n~/.vim/cache/viminfo
"           | |    |    |   |    | + viminfo file path
"           | |    |    |   |    + disable 'hlsearch' when loading viminfo
"           | |    |    |   + save lines for each register
"           | |    |    + save command-line history
"           | |    + save search history
"           | + save file marks
"           + save/restore buffer list


"------------------------------------------------------------
" Whitespace
"------------------------------------------------------------
" Flag unnecessary whitespace
highlight ExtraWhitespace ctermbg=1 ctermfg=0

" Track match ID so we can delete/refresh it cleanly
let g:trailing_ws_id = -1

function! HighlightTrailingWS()
  " Skip special buffers where trailing space is intentional
  if &buftype != '' || &filetype ==# 'help' || &filetype ==# 'gitcommit'
    return
  endif

  " Clear existing match, if any
  if g:trailing_ws_id != -1
    silent! call matchdelete(g:trailing_ws_id)
    let g:trailing_ws_id = -1
  endif

  " Choose pattern based on mode:
  if mode() ==# 'i'
    " Insert: avoid highlighting under cursor
    let g:trailing_ws_id = matchadd('ExtraWhitespace', '\%#\@<!\s\+$')
  else
    " Normal: highlight all trailing space
    let g:trailing_ws_id = matchadd('ExtraWhitespace', '\s\+$')
  endif
endfunction

augroup showTrailingWS
  autocmd!
  " Update highlighting when entering/leaving insert mode or buffer
  autocmd InsertEnter,InsertLeave * call HighlightTrailingWS()
  autocmd BufEnter * call HighlightTrailingWS()
  autocmd ColorScheme * call HighlightTrailingWS()  " survive theme changes
augroup END

" Remove trailing whitespace without moving the cursor
function! TrimWhitespace()
    let l:save = winsaveview()
    keeppatterns %s/\s\+$//e
    call winrestview(l:save)
endfunction

" Trigger whitespace cleanup
noremap <leader>w :call TrimWhitespace()<CR>

