"------------------------------------------------------------
" Undo / Backup / Swap
"------------------------------------------------------------
let s:vim_home = expand('~/.vim')
let s:cache_dir = s:vim_home . '/cache'
let s:backup_dir = s:cache_dir . '/backup'
let s:swap_dir = s:cache_dir . '/swap'
let s:undo_dir = s:cache_dir . '/vimundo'

let s:vim_dirs = [s:cache_dir, s:backup_dir, s:swap_dir, s:undo_dir]
for s:dir in s:vim_dirs
  if !isdirectory(s:dir)
    call mkdir(s:dir, 'p', 0700)
  endif
endfor

set dir=~/.vim/cache/swap//
set backupdir=~/.vim/cache/backup//

" set nobackup
" set nowritebackup
"
function Tmpwatch(path, days)
    let l:path = expand(a:path)
    if isdirectory(l:path)
        for file in split(globpath(l:path, "*"), "\n")
            if localtime() > getftime(file) + 86400 * a:days && delete(file) != 0
                echo "Tmpwatch(): Error deleting '" . file . "'"
            endif
        endfor
    else
        echo "Tmpwatch(): Directory '" . l:path . "' not found"
    endif
endfunction

if exists("+undofile")
    set undodir=~/.vim/cache/vimundo//
    set undofile
    set undolevels=1000
    set undoreload=10000
    call Tmpwatch(&undodir, 31) " Delete undo files which haven't been modified for 31 days
endif


